{
  "preset": "jest-expo",
  "rootDir": ".",
  "roots": ["<rootDir>/src/", "<rootDir>/__tests__/"],
  "transformIgnorePatterns": ["node_modules/(?!(@?react-native)/)"],
  "testPathIgnorePatterns": ["/node_modules/", "/mocks?/"],
  "verbose": true,
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "**/data/usecase(s)?/**/*.{ts,tsx})",
    "!**/data/protocols/**",
    "!**/node_modules/**",
    "!**/__tests__/**",
    "!**/main/**",
    "!**/domain/**"
  ]
}
